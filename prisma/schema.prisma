datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  img      String?
  lines    Line[]  
  rectangles Rectangle[]
}

model Line {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  board    Board     @relation(fields: [boardId], references: [id])
  boardId  String    @db.ObjectId
  strokeWidth Int
  stroke   String
  tool     String
  points   Int[]
}

model Rectangle {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  board    Board     @relation(fields: [boardId], references: [id])
  boardId  String    @db.ObjectId
  x        Int
  y        Int
  width    Int
  height   Int
  color    String
}